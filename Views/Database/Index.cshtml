@model List<string>
@inject AxPlantSimWebApp.Services.ColumnNameMapper ColumnNames

@{
    ViewData["Title"] = "Database Tables";
}

<h2>Databázové tabulky</h2>

<div class="table-list mt-3">
    @foreach (var t in Model)
    {
        <a asp-controller="Database"
           asp-action="Table"
           asp-route-tableName="@t"
           class="table-list-item">
            <span>@ColumnNames.GetTableDisplayName(t)</span>
            <span class="arrow">›</span>
        </a>
    }
</div>
